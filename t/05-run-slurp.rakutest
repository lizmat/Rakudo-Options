use Test;
use Rakudo::Options;

plan 2;

my $ro = Rakudo::Options.new(
  program => $*PROGRAM.sibling('run.raku')
);

my $output = $ro.run(<foo bar>, :out).out.slurp;

is $output, "1..1\nok 1 - did we get the right parameters\n",
  'did we get the right output on success';

$output = $ro.run(:out, :err).out.slurp;
is $output, "1..1\nnot ok 1 - did we get the right parameters\n",
  'did we get the right output on failure';

